{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "types": [
      "node",
      "mocha"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "lib/*.ts", "example/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "module": "commonjs"
  },
}
